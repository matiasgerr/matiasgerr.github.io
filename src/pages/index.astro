---
/* funciones para la traducion de la pagina*/
import "../styles/global.css";
import Layout from "../layouts/MainLayout.astro";
import Badge from "../components/badge.astro";
import SocialsItems from "../components/SocialsItems.astro";
import { useTranslations } from "../i18n/utils";
import { languagesList } from "../i18n/ui";
import Lang_ProgramPill from "../assets/icon/Lang_programpill.astro";
import HTML_item from "../assets/icon/Program_Leng/HTML_icon.astro";
import JS_item from "../assets/icon/Program_Leng/Js.astro";
import CSSicon from "../assets/icon/Program_Leng/CSSicon.astro";  
import Astroicon from "../assets/icon/Program_Leng/Astroicon.astro";
import React from "../assets/icon/Program_Leng/React.astro";
import Tailwind from "../assets/icon/Program_Leng/Tailwind.astro";
import Seccion_skills from "../components/Seccion_skills.astro";
const currentLang = Astro.currentLocale;
const translateLabels = useTranslations(
  currentLang as keyof typeof languagesList
);
---

<!-- BOX 1: Presentaci칩n -->
<Layout
  title="Portfolio Web de Matias  |  Desarrollador Web y Dise침o Web ..."
  description="Matias Damian Delgado + Desarrollador Web y Dise침o Web en Buenos Aires, Argentina. Conoce m치s sobre mi y mi trabajo."
>
  <section>
    <section id="clip-section" class="flex flex-row p-10 my-7">
      <div
        class="clip-custom w-1/2 flex flex-col items-start p-10 gap-3 text-white/70 bg-gradient-to-b from-[#59159d93] to-[#00000000]"
      >
        <img
          src="https://lh3.googleusercontent.com/a/ACg8ocJEbYCjBwIzf0sHv4KIzKYRooko1yJtiqDAJTmGd_uNtqe98w7i=s288-c-no"
          class="rounded-full size-28"
          alt="my img"
        />

        <h1 class="text-3xl font-bold">
          {translateLabels("name.title")}
        </h1>

        <a
          href="https://www.linkedin.com/in/matiasdamiandelgado/"
          class="flex justify-center items-center"
        >
          <Badge>{translateLabels("badge.text")}</Badge>
        </a>

        <p class="text-lg opacity-80">
          {translateLabels("presentation.text")}{" "}
          {translateLabels("presentation.country")}{" "}
          {translateLabels("presentation.study")}{" "}
          <span class="text-blue-100/90">
            {translateLabels("presentation.degree")}
          </span>
        </p>

        <SocialsItems />
      </div>

      <div
        class="clip-medium w-1/2 flex flex-col gap-2 bg-gradient-to-t from-[#59159d9f] via-50% to-[#24212110] text-pretty text-white"
      >
        <h2 class="text-3xl font-bitcount my-2 ml-1.5 text-center">Skills</h2>
        <div class="flex flex-row justify-around p-8 ml-5">
          <ul class="flex flex-col items-center gap-3">
            <Lang_ProgramPill>
              <HTML_item class="size-6" />
              <span class="text-sm sm:text-sm break-all text-center">
                HTML
              </span>
            </Lang_ProgramPill>
            <ul>
              <Lang_ProgramPill>
                <CSSicon class="size-6" />
                <span class="text-sm sm:text-sm break-all text-center">
                  CSS
                </span>
              </Lang_ProgramPill>
            </ul>
            <ul>
              <Lang_ProgramPill>
                <JS_item class="size-6" />
                <span class="text-sm sm:text-sm break-all text-center">
                  JavaScript
                </span>
              </Lang_ProgramPill>
            </ul>
          </ul>

          <ul class="flex flex-col items-center gap-3">
            <Lang_ProgramPill>
              <React class="size-6" />
              <span class="text-sm sm:text-sm break-all text-center">
                React
              </span>
            </Lang_ProgramPill>

            <Lang_ProgramPill>
              <Tailwind class="size-6" />
              <span class="text-sm sm:text-sm break-all text-center">
                TailwindCSS
              </span>
            </Lang_ProgramPill>
          </ul>
        </div>
        <h1
          class="flex flex-col gap-y-5 text-[#c2c2c2] items-center text-center font-bitcount"
        >
          This repository is made with
          <Lang_ProgramPill>
            <Astroicon />
          </Lang_ProgramPill>
        </h1>
      </div>
    </section>
    <Seccion_skills />
  </section>
</Layout>

<style>
  .clip-custom {
    clip-path: polygon(80% 0, 100% 53%, 90% 100%, 0 100%, 0 0);
  }
  .clip-medium {
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%, 13% 53%);
  }
  .font-bitcount {
    font-family: "Bitcount Grid Double", system-ui;
    font-optical-sizing: auto;
    font-weight: 600;
    font-style: normal;
    font-variation-settings:
      "slnt" 0,
      "CRSV" 0.5,
      "ELSH" 0,
      "ELXP" 0;
  }
</style>
